{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Tundra",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#comments"
		},
		{
			"include": "#numbers"
		},
		{
			"include": "#functions"
		},
		{
			"include": "#operators"
		},
		{
			"include": "#constants"
		},
		{
			"include": "#variables"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [{
				"name": "keyword.control.tundra",
				"match": "\\b(if|else|while|for|return|func|fn|function|in|do|var|const)\\b"
			}]
		},
		"strings": {
			"name": "string.quoted.double.tundra",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.tundra",
					"match": "\\\\."
				}
			]
		},
		"comments": {
			"patterns": [
				{
					"name": "comment.line.double-slash.tundra",
					"match": "//.*$"
				},
				{
					"name": "comment.block.tundra",
					"begin": "/\\*",
					"end": "\\*/"
				}
			]
		},
		"numbers": {
			"name": "constant.numeric.tundra",
			"match": "\\b[0-9]+(\\.[0-9]+)?\\b"
		},
		"functions": {
			"name": "entity.name.function.tundra",
			"match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\s*\\("
		},
		"operators": {
			"name": "keyword.operator.tundra",
			"match": "(==|!=|!|\\+|-|\\*|/|%|&&|\\|\\|)"
		},
		"constants": {
			"patterns": [{
				"name": "constant.language.tundra",
				"match": "\\b(true|false|nil)\\b"
			}]
		},
		"variables": {
			"name": "variable.other.tundra",
			"match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
		}
	},
	"scopeName": "source.tundra"
}